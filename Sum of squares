#include <iostream>
#include <vector>
using namespace std;

int sumsquares_list(int array[5], int y )
   {
   int x=0;
   for(int i=0;i<5;i++)
     {
    x = x+(array[i]*array[i]);
     }
   return x;
   }

 int main() {

   int a[5];

cout << "Type an integer!: "<<endl;
cin >> a[0];

cout << "Another integer, please: "<<endl;
cin >> a[1];

cout << "Is it too much to ask for another one? "<<endl;
cin >> a[2];

cout << "One last time please: "<<endl;
cin >> a[3];

cout << "Okay, okay, this is the last one, I promise: "<<endl;
cin >> a[4];

cout << "The sum of the squares of all those integers is: " << sumsquares_list (a,5)<<"    "<<endl;

 return 0;
 }
